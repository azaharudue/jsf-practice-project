<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="com.jsftest.main.java.entities.Product" table="product">
		 <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="identity" />
        </id>
		  
		<property name="name" /> 	  
        <property name="price" />
        
         <component name="depositData" class="com.jsftest.main.java.entities.ProductDepositData" insert="true">  
        	 <property name="value" type="big_decimal" column="depositValue" not-null="true"/> 
	 		 <property name="system" column="depositSystem" not-null="true">
		 		   <type name="org.hibernate.type.EnumType">
			 		   <param name="enumClass">com.jsftest.main.java.enums.ProductDepositSystem</param>
			 		   <param name="type">12</param>
		 		   </type> 
	 		 </property>
	
	 	</component>
        
		 <!--  <set cascade="all"  name="productDetail" sort="unsorted" >
		  				 <key column="product_id" not-null="true"></key>
			  			 <one-to-many class="main.java.entity.ProductDetail"></one-to-many>
		 </set> -->
		  <many-to-one name="company" class="com.jsftest.main.java.entities.Company"   column="companyID"   fetch="select"   lazy="false"/>
 
 </class>
</hibernate-mapping>
