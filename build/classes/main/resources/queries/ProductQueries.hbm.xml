<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- Queries for product -->
<hibernate-mapping>


	<!-- Update a product <query name="updateProductById"> <query-param name="id" 
		type="Integer"/> <query-param name="name" type="String"/> <query-param name="price" 
		type="DECIMAL "/> <![CDATA[ Update Product p SET p.name = :name, p.price 
		= :price WHERE p.id = :id ]]> </query> -->
	<!-- Get all products -->
	<query name="getAllProducts">
	
		<![CDATA[
		SELECT 
			p 
		FROM 
			Product  AS p
		]]>
	</query>
	<!-- Get all productDetails -->
	<query name="getAllProductDetails">
	
		<![CDATA[
		SELECT 
			pd 
		FROM 
			ProductDetail  AS pd
		]]>
	</query>
	<!-- Get a product -->
	<query name="getProductById">
		<query-param name="id" type="Integer" />
		<![CDATA[
		SELECT 
			p 
		FROM 
			Product AS p 
		WHERE 
		p.id= :id
		]]>
	</query>
	<!-- Get a product with details -->
	<query name="getDetailsByProductId">
		<query-param name="id" type="Integer" />
		<![CDATA[
		SELECT 
			pd
		FROM 
			ProductDetail As pd
		WHERE 
			pd.product.id= :id
		]]>
	</query>
	<query name="getProductWithDetailsByValue">
		<query-param name="value" type="String" />
		<![CDATA[
		SELECT DISTINCT
			pd.product
		FROM 
			ProductDetail As pd
		WHERE 
			pd.value LIKE CONCAT('%', :value, '%')
		]]>
	</query>

	<query name="deleteProductById">
		<query-param name=" id" type="Integer" />
		<![CDATA[
		DELETE	
		FROM 
			Product AS p 
		WHERE 
			p.id= :id
		]]>
	</query>
	<query name="deleteAllProducts">
		<![CDATA[
		DELETE
		FROM
			Product			
		]]>
	</query>
	<!-- !!!!!!!!!!!!!!-Here are the aggregated functions/ customised queries 
		other than CRUD-!!!!!!!!!!!!!!!!!!! -->

	<!-- Sum of prices -->
	<query name="getSumOfPrices">
	
		<![CDATA[
		SELECT 
			sum(p.price)
		FROM 		
			Product p
		]]>
	</query>
	<!-- Average of prices -->
	<query name="getAvgSumCountOfPrices">
	
		<![CDATA[
		SELECT 
			sum(p.price) AS sum, 
			avg(p.price) AS average, 
			count(p.price) AS count
		FROM 		
			Product p
		]]>
	</query>

	<query name="getSummaryPerCompany">
	
		<![CDATA[
		
		 SELECT 
				p.company AS company,
				sum(p.price) AS totalPrice , 
				avg(p.price) AS average, 
				count(p.id) AS count
		FROM 
				Product p		
		GROUP BY p.company
				
		]]>
	</query>



</hibernate-mapping>                                