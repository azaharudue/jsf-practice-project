<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
<!-- Get all companies -->
<query name="getAllCompanies" >
	
		<![CDATA[
		SELECT 
			c 
		FROM 
			Company  AS c
		]]>
	</query>
	
	<!-- Get a company by id -->
<query name="getCompanyById">
	<query-param name="id" type="Integer"/>
		<![CDATA[
		SELECT 
			c
		FROM 
			Company AS c 
		WHERE 
		c.id= :id
		]]>
	</query>
	
</hibernate-mapping>